[Unit]
Description=IT Jobs Meta data pipeline schedule

[Service]
User={{ ansible_user }}
ExecStart=/home/{{ ansible_user }}/.local/bin/it-jobs-meta -l /home/{{ ansible_user }}/it-jobs-meta/it_jobs_meta_pipeline.log pipeline {{ pipeline_command_params }}
Restart=on-failure

[Install]
WantedBy=multi-user.target
